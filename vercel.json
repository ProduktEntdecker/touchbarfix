{
  "framework": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' plausible.io; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' plausible.io; font-src 'self'; object-src 'none'; base-uri 'self'; frame-ancestors 'none';"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=(), payment=(), usb=(), bluetooth=(), magnetometer=(), gyroscope=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    },
    {
      "source": "/App/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    },
    {
      "source": "/downloads/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/octet-stream"
        },
        {
          "key": "Content-Disposition",
          "value": "attachment"
        }
      ]
    },
    {
      "source": "/favicon.ico",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/apple-touch-icon.png",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/emails-to-send.html",
      "destination": "/404.html",
      "statusCode": 404
    },
    {
      "source": "/App/:path*",
      "destination": "/404.html",
      "statusCode": 404
    },
    {
      "source": "/.git/:path*", 
      "destination": "/404.html",
      "statusCode": 404
    },
    {
      "source": "/.github/:path*",
      "destination": "/404.html", 
      "statusCode": 404
    },
    {
      "source": "/docs/:path*",
      "destination": "/404.html",
      "statusCode": 404
    },
    {
      "source": "/scripts/:path*",
      "destination": "/404.html",
      "statusCode": 404
    },
    {
      "source": "/CLAUDE.md",
      "destination": "/404.html",
      "statusCode": 404
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    { "source": "/favicon.ico", "destination": "/Assets/favicon.ico" },
    { "source": "/apple-touch-icon.png", "destination": "/Assets/apple-touch-icon.png" },
    { "source": "/favicon.ico", "destination": "/Assets/favicon.ico" }
  ]
}
