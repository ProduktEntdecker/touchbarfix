<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Hardened Runtime -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>
    
    <!-- Allow killing other processes (needed for pkill) -->
    <key>com.apple.security.temporary-exception.mach-lookup.global-name</key>
    <array>
        <string>com.apple.TouchBarServer</string>
        <string>com.apple.controlstrip</string>
        <string>com.apple.NowPlayingTouchUI</string>
    </array>
    
    <!-- For non-sandboxed distribution -->
    <!-- If you want to sandbox later, you'll need different entitlements -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- SECURITY: Network access removed until actually needed for updates -->
    <!-- <key>com.apple.security.network.client</key> -->
    <!-- <true/> -->
    
    <!-- SECURITY: File access restricted to minimum required -->
    <!-- <key>com.apple.security.files.user-selected.read-write</key> -->
    <!-- <true/> -->
    
    <!-- SECURITY: Only essential Touch Bar process termination allowed -->
    <key>com.apple.security.temporary-exception.mach-lookup.global-name</key>
    <array>
        <string>com.apple.TouchBarServer</string>
        <string>com.apple.controlstrip</string>
        <string>com.apple.NowPlayingTouchUI</string>
        <string>com.apple.TouchBarAgent</string>
        <string>com.apple.TouchBarUserDevice</string>
        <string>com.apple.DFRFoundation</string>
    </array>
</dict>
</plist>